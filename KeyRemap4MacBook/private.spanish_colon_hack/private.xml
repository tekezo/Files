<?xml version="1.0"?>
<root>

  <item>
    <name>Change รง key to colon (:).</name>
    <appendix>shift-รง to backslash(\).</appendix>
    <identifier>private.spanish_colon_hack</identifier>
    <!-- SPANISH ISO LAYOUT, COMMONLY USED IN SPAIN -->
    <inputsource_only>SPANISH</inputsource_only>

    <!-- รง to colon (:) -->
    <autogen>
      __KeyToKey__
      KeyCode::BACKSLASH, ModifierFlag::NONE,
      KeyCode::DOT, ModifierFlag::SHIFT_L,
    </autogen>

    <!-- shift-รง to backslash(\) -->
    <autogen>
      __KeyToKey__
      KeyCode::BACKSLASH, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT |     ModifierFlag::NONE,
      KeyCode::SPANISH_ORDINAL_INDICATOR, ModifierFlag::OPTION_L,
    </autogen>
  </item>

</root>
